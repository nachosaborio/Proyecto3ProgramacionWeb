@model Proyecto1.Models.Parqueo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Parqueo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>ID: @Model.Id</p>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadMaxima" class="control-label"></label>
                <input asp-for="CapacidadMaxima" class="form-control" />
                <span asp-validation-for="CapacidadMaxima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraApertura" class="control-label"></label>
                <input asp-for="HoraApertura" class="form-control" />
                <span asp-validation-for="HoraApertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraCierre" class="control-label"></label>
                <input asp-for="HoraCierre" class="form-control" />
                <span asp-validation-for="HoraCierre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
